@model LoginModel
@{
    ViewData["Title"] = "User Management";
}

<h1 style="text-align: center">User Management</h1>
<div class="row">
    <div class="col-md-3 col-lg-4"></div>
    <div class="col-md-6 col-lg-4">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                
                <label asp-for="LoginName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LoginName" class="form-control">
                    <span asp-validation-for="LoginName" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row">
                <div class="custom-control custom-checkbox col-sm-8 offset-4">
                    <input class="custom-control-input" asp-for="RememberMe" />
                    <label class="custom-control-label" asp-for="RememberMe">
                        @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class=" col-sm-8 offset-4">
                    <button type="submit" class="btn btn-primary">Log in</button>
                    <button type="submit" class="btn btn-primary float-lg-right">Reset</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3 col-lg-4"></div>
</div>
